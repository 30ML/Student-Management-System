{% extends 'layout.html.j2' %} 

{% block content %}
<div>
  <h1>{{ user.username }}</h1>
  <h3>전체 과제 현황</h3>
  <br/>
  <table border=1>
  <thead>
    <tr>
      <th width=500>과제 이름</th>
      <th width=80>점수</th>
    </tr>
  </thead>
  <tbody>
    {% for assignment in assignments %}
      <tr>
        <td>{{ assignment.assignment_title }}</td>
        <td>{{ assignment.score }}</td>
      </tr>
    {% endfor %}      
  </tbody>
</table>
</div>
{% endblock %}
